<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_padding"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/drawable_padding"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PrefName"
                android:textColor="?colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="@dimen/view_profile_text_size"
                android:drawablePadding="@dimen/drawable_padding"
                android:id="@+id/seekbar_pref_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number"
                android:textSize="@dimen/view_profile_text_size"
                android:layout_gravity="end"
                android:id="@+id/seekbar_pref_value"
                />

        </FrameLayout>

        <io.apptik.widget.MultiSlider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekbar_pref_slider"
            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>