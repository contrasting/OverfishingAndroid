<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MessageItemStyle">

    <dating.overfishing.views.CustomTextView
        android:id="@+id/text_message_body"
        android:text="hello, hello!"
        style="@style/ChatTextStyle"
        android:textColor="?colorSentText"
        android:background="@drawable/rounded_rectangle_own"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/text_message_time"
        android:text="11:40"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_body"
        app:layout_constraintRight_toLeftOf="@+id/text_message_body"
        style="@style/ChatTimestampStyle" />

</androidx.constraintlayout.widget.ConstraintLayout>
