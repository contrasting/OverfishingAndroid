<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                android:id="@+id/profile_image_pager"/>

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/profile_image_indicator"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_items_container"
            android:orientation="vertical"
            android:padding="@dimen/padding_master"
            android:animateLayoutChanges="true">

            <TextView
                android:layout_gravity="bottom"
                android:id="@+id/profile_name"
                android:text="Joe Bloggs"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="?colorPrimaryDark"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/view_profile_text_size"
                android:textColor="?colorPrimaryDark"
                android:drawableStart="@drawable/ic_location_on_24dp"
                android:drawablePadding="@dimen/drawable_padding"
                android:id="@+id/profile_distance"
                android:layout_marginBottom="10dp"
                android:text="52 miles away"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="?colorPrimaryDark"/>

        </LinearLayout>

        <!-- pad to be able to scroll down -->

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    </LinearLayout>

</ScrollView>